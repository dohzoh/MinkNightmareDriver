{
    "name":         "behat/mink-nightmare-driver",
    "description":  "Nightmare.js driver for Mink framework",
    "keywords":     ["nightmare", "headless", "javascript", "ajax", "testing", "browser"],
    "homepage":     "http://mink.behat.org/",
    "type":         "mink-driver",
    "license":      "MIT",

    "authors": [
        {
            "name":      "Yohzoh Matsui",
            "email":     "dohzoh@gmail.com",
            "homepage":  "https://github.com/dohzoh/"
        }
    ],

    "require": {
        "ext-sockets":      "*",
        "php":              ">=5.3.1",
        "behat/mink":       "~1.7@dev",
        "symfony/process":  "~2.1|~3.0",
        "phpunit/phpunit": "6.0.x-dev"
    },

    "require-dev": {
        "mink/driver-testsuite": "dev-master"
    },

    "autoload": {
        "psr-4": {
            "Behat\\Mink\\Driver\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Behat\\Mink\\Tests\\Driver\\": "tests"
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.4.x-dev"
        }
    }
}
